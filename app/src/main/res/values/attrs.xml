<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ******************************************************************************************************************************* -->
    <!-- MaterialCircularProgressBar -->
    <!-- ******************************************************************************************************************************* -->
    <attr name="circleBorderWidth" format="reference|dimension" />

    <declare-styleable name="MaterialCircularProgressBar">
        <attr name="android:color" />
    </declare-styleable>

    <declare-styleable name="LoadingLayout">
        <attr name="loading_layout" format="reference" />
        <attr name="loading_background" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circleBorderColor" format="reference|color" />
        <attr name="circleBorderWidth" />
        <attr name="circleProgress" format="reference|integer" />
        <attr name="circleProgressColor" format="reference|color" />
        <attr name="circleBackgroundColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="CircleViewTablet">
        <attr name="circleColor" format="reference|color" />
        <attr name="circleBorderWidth" />
        <attr name="circleGradientWidth" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="LinearLayoutWithLine">
        <attr name="lineColor" format="reference|color" />
        <attr name="lineWidth" format="reference|dimension" />
        <attr name="lineOffsetX" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="indicatorColor" format="reference|color" />
        <attr name="indicatorSelectColor" format="reference|color" />
        <attr name="indicatorSize" format="dimension|reference" />
        <attr name="indicatorDividerSize" format="dimension|reference" />
    </declare-styleable>

</resources>