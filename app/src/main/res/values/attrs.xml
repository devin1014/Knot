<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ******************************************************************************************************************************* -->
    <!-- MaterialCircularProgressBar -->
    <!-- ******************************************************************************************************************************* -->
    <declare-styleable name="MaterialCircularProgressBar">
        <attr name="android:color" />
    </declare-styleable>

    <declare-styleable name="LoadingLayout">
        <attr name="loading_layout" format="reference" />
        <attr name="loading_background" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="border_width" format="reference|dimension" />
        <attr name="border_color" format="reference|color" />
        <attr name="progressColor" format="reference|color" />
        <attr name="progress" format="integer" />
    </declare-styleable>

</resources>