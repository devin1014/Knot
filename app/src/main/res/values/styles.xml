<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <style name="AppTheme.FullScreen.NoNavigation">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Widget-->
    <style name="ModuleGroupFilter">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:tag">0</item>
        <item name="android:checked">true</item>
        <item name="android:text">@string/group_all</item>
        <item name="android:textColor">@color/text_module_filter</item>
        <item name="android:background">@drawable/bg_module_filter</item>
    </style>

    <style name="ModuleGroupFilter.First">
        <item name="android:tag">1</item>
        <item name="android:checked">false</item>
        <item name="android:text">@string/group_first_floor</item>
    </style>

    <style name="ModuleGroupFilter.Second">
        <item name="android:tag">2</item>
        <item name="android:checked">false</item>
        <item name="android:text">@string/group_second_floor</item>
    </style>

    <style name="ModuleGroupFilter.Third">
        <item name="android:tag">3</item>
        <item name="android:checked">false</item>
        <item name="android:text">@string/group_third_floor</item>
    </style>

</resources>
