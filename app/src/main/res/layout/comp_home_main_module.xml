<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.android.smartlink.ui.model.UIModule" />

        <variable
            name="handler"
            type="com.android.devin.core.ui.widget.recyclerview.DataBindingHandler" />

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:onClick="@{(view)->handler.onItemClick(view,data)}"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="24dp">

        <com.android.smartlink.ui.widget.CircleView
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            app:border_color="#d9d9d9"
            app:border_width="5dp"
            app:imageRes="@{data.whiteImageRes}"
            app:progress="@{data.source.powerLoad}"
            app:progressColor="@{data.color}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.name}"
            android:textColor="#ffffff"
            android:textSize="16dp"
            tools:ignore="SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.power+data.month}"
            android:textColor="#bbffffff"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

</layout>