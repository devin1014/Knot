<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.android.smartlink.ui.model.UIModule[]" />

        <variable
            name="handler"
            type="com.neulion.core.widget.recyclerview.handler.DataBindingHandler" />

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{(view)->handler.onItemClick(view,data[0])}"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp">

                <com.android.smartlink.ui.widget.CircleView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    app:circleBackgroundColor="#33000000"
                    app:circleBorderColor="#d9d9d9"
                    app:circleBorderWidth="5dp"
                    app:circleProgress="@{data[0].powerLoad}"
                    app:circleProgressColor="@{data[0].color}"
                    app:imageRes="@{data[0].whiteImageRes}" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/module_status_selector"
                    android:visibility="@{data[0].normal?View.GONE:View.VISIBLE}"
                    app:imageLevel="@{data[0].status}" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data[0].name}"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{(view)->handler.onItemClick(view,data[1])}"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp">

                <com.android.smartlink.ui.widget.CircleView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    app:circleBackgroundColor="#33000000"
                    app:circleBorderColor="#d9d9d9"
                    app:circleBorderWidth="5dp"
                    app:circleProgress="@{data[1].powerLoad}"
                    app:circleProgressColor="@{data[1].color}"
                    app:imageRes="@{data[1].whiteImageRes}" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/module_status_selector"
                    android:visibility="@{data[1].normal?View.GONE:View.VISIBLE}"
                    app:imageLevel="@{data[1].status}" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data[1].name}"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{(view)->handler.onItemClick(view,data[2])}"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp">

                <com.android.smartlink.ui.widget.CircleView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    app:circleBackgroundColor="#33000000"
                    app:circleBorderColor="#d9d9d9"
                    app:circleBorderWidth="5dp"
                    app:circleProgress="@{data[2].powerLoad}"
                    app:circleProgressColor="@{data[2].color}"
                    app:imageRes="@{data[2].whiteImageRes}" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/module_status_selector"
                    android:visibility="@{data[2].normal?View.GONE:View.VISIBLE}"
                    app:imageLevel="@{data[2].status}" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data[2].name}"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </LinearLayout>

</layout>