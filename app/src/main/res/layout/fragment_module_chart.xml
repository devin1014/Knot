<?xml version="1.0" encoding="utf-8"?>
<!--chat-->
<com.android.smartlink.ui.widget.LoadingLayout
    android:id="@+id/loading_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:loading_layout="@layout/comp_loading_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="24dp">

        <FrameLayout
            android:id="@+id/chart_left_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_common_item_bg_ff_20" />

        <FrameLayout
            android:id="@+id/chart_right_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_common_item_bg_ff_20" />

    </LinearLayout>

</com.android.smartlink.ui.widget.LoadingLayout>