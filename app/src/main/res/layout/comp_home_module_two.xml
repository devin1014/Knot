<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.android.smartlink.ui.model.UIModule[]" />

        <variable
            name="handler"
            type="com.android.devin.core.ui.widget.recyclerview.DataBindingHandler" />

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{(view)->handler.onItemClick(view,data[0])}"
            android:orientation="vertical">

            <com.android.smartlink.ui.widget.CircleView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                app:circleBackgroundColor="#33000000"
                app:circleBorderColor="#d9d9d9"
                app:circleBorderWidth="5dp"
                app:circleProgress="@{data[0].source.powerLoad}"
                app:circleProgressColor="@{data[0].color}"
                app:imageRes="@{data[0].whiteImageRes}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data[0].name}"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data[0].powerAndMonth}"
                android:textColor="#bbffffff"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{(view)->handler.onItemClick(view,data[1])}"
            android:orientation="vertical">

            <com.android.smartlink.ui.widget.CircleView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                app:circleBackgroundColor="#33000000"
                app:circleBorderColor="#d9d9d9"
                app:circleBorderWidth="5dp"
                app:circleProgress="@{data[1].source.powerLoad}"
                app:circleProgressColor="@{data[1].color}"
                app:imageRes="@{data[1].whiteImageRes}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data[1].name}"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data[1].powerAndMonth}"
                android:textColor="#bbffffff"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </LinearLayout>

</layout>