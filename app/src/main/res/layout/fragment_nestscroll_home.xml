<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe_refresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.smartlink.ui.widget.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loading_layout="@layout/comp_loading_layout">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/app_content_margin">

                <include layout="@layout/list_item_home_weather" />

                <com.android.smartlink.ui.widget.ModuleStatusView
                    android:id="@+id/module_status_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_status_detail_bg"
                    android:orientation="vertical">

                    <!--total status-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/status_top"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="#d9ffffff"
                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/status_image"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginLeft="14dp"
                            android:layout_marginStart="14dp"
                            android:contentDescription="@null"
                            android:scaleType="centerInside"
                            android:src="@drawable/module_status_selector" />

                        <TextView
                            android:id="@+id/status_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="62dp"
                            android:layout_marginStart="62dp"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:id="@+id/arrow_image"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            android:contentDescription="@null"
                            android:scaleType="centerInside"
                            android:src="@drawable/arrow_selector" />

                    </android.support.v7.widget.CardView>

                    <!--module status-->
                    <com.android.smartlink.ui.widget.LinearLayoutWithLine
                        android:id="@+id/status_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:lineColor="#ffffff"
                        app:lineOffsetX="31.5dp"
                        app:lineWidth="1dp" />

                </com.android.smartlink.ui.widget.ModuleStatusView>

                <LinearLayout
                    android:id="@+id/content_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.android.smartlink.ui.widget.LoadingLayout>

</android.support.v4.widget.SwipeRefreshLayout>
