<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.android.smartlink.ui.model.UIEvent" />

        <variable
            name="handler"
            type="com.android.devin.core.ui.widget.recyclerview.DataBindingHandler" />

    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="@{(view)-> handler.onItemClick(view,data)}"
        android:orientation="horizontal"
        tools:ignore="SpUsage">

        <TextView
            android:id="@+id/events_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:paddingTop="4dp"
            android:text="@{data.name}"
            android:textColor="#626469"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/events_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/events_name"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:paddingBottom="4dp"
            android:text="@{data.time}"
            android:textColor="#9fa0a4"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/events_indicator_green" />

    </RelativeLayout>

</layout>