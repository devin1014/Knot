<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_content_margin">

    <com.neulion.core.widget.recyclerview.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:fadeScrollbars="false"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        app:dividerColor="#00000000"
        app:dividerSize="@dimen/home_list_divider"
        app:orientation="vertical" />

    <Button
        android:id="@+id/settings_demo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="62dp"
        android:background="@drawable/bg_item_red_corner_selector"
        android:text="@string/settings_demo"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="normal"
        android:visibility="gone"
        tools:ignore="SpUsage" />

    <Button
        android:id="@+id/settings_signout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_item_red_corner_selector"
        android:text="@string/settings_signout"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="normal"
        android:visibility="gone"
        tools:ignore="SpUsage" />

</FrameLayout>