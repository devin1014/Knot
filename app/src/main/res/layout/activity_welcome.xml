<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009c42">

    <View
        android:id="@+id/center_anchor"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/center_anchor"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_splash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_anchor"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name_uppercase"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="12dp"
        android:contentDescription="@null"
        android:src="@drawable/logo_schneider" />

    <View
        android:id="@+id/anchor_view"
        android:layout_width="1px"
        android:layout_height="120dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/anchor_view"
        android:layout_margin="@dimen/app_content_margin"
        android:background="@drawable/bg_item_green_selector"
        android:gravity="center"
        android:text="@string/settings_signin"
        android:textColor="#ffffff"
        android:textSize="16dp"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/demo_mode"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_below="@id/sign_in"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/demo_mode"
        android:textColor="#ffffff"
        android:textSize="16dp"
        tools:ignore="SpUsage" />

</RelativeLayout>