<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.android.smartlink.ui.model.UIModuleBar" />

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/status_card_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        app:cardBackgroundColor="#d9ffffff"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/module_status_selector"
            app:imageLevel="@{data.status}" />

        <TextView
            android:id="@+id/status_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"
            android:gravity="center_vertical"
            android:text="@{data.title}"
            android:textColor="@{data.textColor}"
            android:textSize="16dp"
            tools:ignore="SpUsage"
            tools:text="正常" />

        <ImageView
            android:id="@+id/status_arrow"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_selector"
            android:tint="@{data.textColor}"
            android:tintMode="multiply"
            app:selected="@{data.selected}" />

    </android.support.v7.widget.CardView>

</layout>