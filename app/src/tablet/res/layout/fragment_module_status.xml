<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.android.smartlink.ui.model.UIMonitorModule" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include
            android:id="@+id/home_main_module"
            layout="@layout/item_home_main_module"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:data="@{data}" />

        <com.neulion.android.diffrecycler.DiffRecyclerView
            android:id="@+id/module_status_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</layout>