<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.android.smartlink.ui.model.UIMonitorModule" />

        <variable
            name="itemClickListener"
            type="com.neulion.android.diffrecycler.listener.OnItemClickListener" />

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:gravity="center"
        android:onClick="@{(view)->itemClickListener.onItemClick(view,data)}"
        android:orientation="vertical"
        tools:background="#88888888">

        <FrameLayout
            android:layout_width="68dp"
            android:layout_height="68dp">

            <com.android.smartlink.ui.widget.CircleView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:contentDescription="@null"
                android:padding="12dp"
                android:scaleType="centerInside"
                app:circleBackgroundColor="#33000000"
                app:circleBorderColor="#d9d9d9"
                app:circleBorderWidth="3dp"
                app:circleProgress="@{data.powerLoad}"
                app:circleProgressColor="@{data.color}"
                app:imageRes="@{data.imageRes}"
                tools:src="@drawable/module_electrical" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/module_status_selector"
                app:imageLevel="@{data.moduleStatus}"
                app:visible="@{data.hasAlarm}" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="@{data.name}"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textStyle="normal"
            tools:ignore="SpUsage"
            tools:text="@string/app_name" />

    </LinearLayout>

</layout>